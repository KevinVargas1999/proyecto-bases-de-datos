create table mensajeusuaruio(
id_mensaje INT NOT NULL,
mensaje VARCHAR(500) NOT NULL,
emisor INT NOT NULL,
receptor INT NOT NULL,
PRIMARY KEY(id_mensaje),
FOREIGN KEY(emisor) REFERENCES usuario (id_usuario),
FOREIGN KEY(receptor) REFERENCES usuario (id_usuario));

