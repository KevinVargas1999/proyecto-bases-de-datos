
create schema BD_V1;
use Bd_V1;

create table usuario(
id_usuario INT NOT NULL,
nombres VARCHAR(50) NOT NULL,
apellidos VARCHAR(50) NOT NULL,
fecha_nac DATE NOT NULL,
genero VARCHAR(10) NOT NULL,
telefono VARCHAR(13) NOT NULL,
PRIMARY KEY(id_usuario)
);

