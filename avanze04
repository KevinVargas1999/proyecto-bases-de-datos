INSERT INTO usuario VALUES (1004, 'MARCO OSWALDO', 'VARGAS TIXE', '1968-05-01', 'HOMBRE','593874596525');

create table actividades(
id_actividad INT NOT NULL,
nombre_act VARCHAR(50) NOT NULL,
descripcion_act VARCHAR(200) NOT NULL,
rango_edad VARCHAR (10) NOT NULL,
califi INTEGER NOT NULL,
PRIMARY KEY(id_actividad)
);

INSERT INTO actividades VALUES (2000, 'NATACION', 'Nadar', '65-75');
INSERT INTO actividades VALUES (2001, 'FUTBOL', 'COREER y PATEAR PELOTA', '65-78');
INSERT INTO actividades VALUES (2002, 'CAMINATA', 'CAMINAR VARIOS METROS', '65-85');
INSERT INTO actividades VALUES (2003, 'AJEDREZ', 'JUEGO DE FICHA Y PENSAMIENTO', '65-100');
INSERT INTO actividades VALUES (2004, 'DOMINO', 'JUEGO DE FICHAS', '65-100');

create table calificacion(
id_calificacion INT NOT NULL,
ponderacion INT NOT NULL,
USU INT NOT NULL,
ACT INT NOT NULL,
PRIMARY KEY(id_calificacion),
FOREIGN KEY(USU) REFERENCES usuario (id_usuario),
FOREIGN KEY(ACT) REFERENCES actividades (id_actividad));

INSERT INTO calificacion VALUES (3000, 10);
INSERT INTO calificacion VALUES (3001, 8);
INSERT INTO calificacion VALUES (3002, 5);
INSERT INTO calificacion VALUES (3003, 9);
INSERT INTO calificacion VALUES (3004, 10);

create table famiusuario(
id_fam INT NOT NULL,
telefonofam VARCHAR(13) NOT NULL,
direccionfam VARCHAR(50) NOT NULL,
nombresfam VARCHAR(20) NOT NULL,
apellidosfam VARCHAR(20) NOT NULL,
USUA INT NOT NULL,
PRIMARY KEY(id_fam),
FOREIGN KEY(USUA) REFERENCES usuario (id_usuario));

